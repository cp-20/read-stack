{
  "name": "read-stack-web",
  "version": "0.0.0",
  "private": true,
  "author": "cp20",
  "license": "MIT",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:next": "next dev",
    "dev:path": "pnpm pathpida -w",
    "build": "pnpm pathpida && next build",
    "start": "next start",
    "pathpida": "pathpida -p .gitignore -o ./src/shared/lib -s",
    "lint": "eslint src --ext .tsx,.ts",
    "stylelint": "stylelint --ignore-path .gitignore './src/**/*.{jsx,tsx,css,scss}'",
    "fix": "pnpm lint --fix && pnpm stylelint --fix && pnpm format",
    "format": "biome format --write .",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/server": "^11.11.0",
    "@mantine/core": "^6.0.16",
    "@mantine/form": "^6.0.16",
    "@mantine/hooks": "^6.0.16",
    "@mantine/next": "^6.0.16",
    "@read-stack/openapi": "workspace:*",
    "@supabase/auth-helpers-nextjs": "^0.7.2",
    "@supabase/auth-helpers-react": "^0.4.0",
    "@supabase/supabase-js": "^2.26.0",
    "@tabler/icons-react": "^2.23.0",
    "jotai": "^2.2.1",
    "next": "^13.4.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-toastify": "^9.1.3",
    "ress": "^5.0.2",
    "sharp": "^0.32.1",
    "swr": "^2.2.0",
    "uuid": "^9.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@read-stack/eslint-config": "workspace:*",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@types/node": "20.2.0",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@types/uuid": "^9.0.2",
    "@vitejs/plugin-react-swc": "^3.3.1",
    "npm-run-all": "^4.1.5",
    "pathpida": "^0.20.1",
    "postcss": "^8.4.23",
    "postcss-syntax": "^0.36.2",
    "stylelint": "^14.16.1",
    "stylelint-config-idiomatic-order": "^9.0.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-prettier": "^3.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": "pnpm lint",
    "*.{css,scss}": "pnpm stylelint",
    "*.{css,scss,js,jsx,ts,tsx,json,md}": "pnpm format"
  }
}
