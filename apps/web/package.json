{
  "name": "read-stack-web",
  "version": "0.0.0",
  "private": true,
  "author": "cp20",
  "license": "MIT",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:next": "next dev",
    "dev:path": "pnpm pathpida -w",
    "build": "pnpm pathpida && next build",
    "start": "next start",
    "pathpida": "pathpida -p .gitignore -o ./src/shared/lib -s",
    "lint": "pnpm eslint && pnpm stylelint && pnpm typecheck",
    "eslint": "eslint src --ext .tsx,.ts",
    "stylelint": "stylelint --ignore-path .gitignore './src/**/*.{jsx,tsx,css,scss}'",
    "fix": "pnpm lint --fix && pnpm stylelint --fix && pnpm format",
    "format": "biome format --write .",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/server": "^11.11.0",
    "@mantine/core": "^6.0.21",
    "@mantine/form": "^6.0.21",
    "@mantine/hooks": "^6.0.21",
    "@mantine/next": "^6.0.21",
    "@read-stack/openapi": "workspace:*",
    "@supabase/auth-helpers-nextjs": "^0.8.7",
    "@supabase/auth-helpers-react": "^0.4.2",
    "@supabase/supabase-js": "^2.39.1",
    "@tabler/icons-react": "^2.44.0",
    "jotai": "^2.6.1",
    "next": "^13.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-toastify": "^9.1.3",
    "ress": "^5.0.2",
    "sharp": "^0.33.1",
    "swr": "^2.2.4",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@read-stack/eslint-config": "workspace:*",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@types/node": "20.10.5",
    "@types/react": "18.2.46",
    "@types/react-dom": "18.2.18",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "npm-run-all": "^4.1.5",
    "pathpida": "^0.22.0",
    "postcss": "^8.4.32",
    "postcss-syntax": "^0.36.2",
    "stylelint": "^16.1.0",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-prettier": "^5.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": "pnpm lint",
    "*.{css,scss}": "pnpm stylelint",
    "*.{css,scss,js,jsx,ts,tsx,json,md}": "pnpm format"
  }
}
